<?xml version="1.0" encoding="UTF-8"?>
<jboss:ejb-jar
	xmlns:mdb="urn:resource-adapter-binding" 
	xmlns:jboss="http://www.jboss.com/xml/ns/javaee"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd 
			    http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	version="3.1"
	impl-version="2.0">
	<jboss:enterprise-beans>
		<message-driven>
			<ejb-name>UniversalMessagingListener</ejb-name>
			<ejb-class>com.xzymon.jee7.eden.mdb.UniversalMessagingListener</ejb-class>
			<transaction-type>Bean</transaction-type>
			<activation-config>
				<activation-config-property>
					<activation-config-property-name>connectionFactoryJndiName</activation-config-property-name>
					<activation-config-property-value>xfactory</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>ConnectionValidation</activation-config-property-name>
					<activation-config-property-value>false</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>destinationJndiName</activation-config-property-name>
					<activation-config-property-value>/xzymon/path/xqueue</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>destinationType</activation-config-property-name>
					<activation-config-property-value>javax.jms.Queue</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>JndiProperties</activation-config-property-name>
					<activation-config-property-value>java.naming.factory.initial=com.pcbsys.nirvana.nSpace.NirvanaContextFactory, java.naming.provider.url="nsp://localhost:9000", java.naming.security.authentication=simple, java.naming.security.principal=xzymon, java.naming.security.credentials=XzymonP4</activation-config-property-value>
				</activation-config-property>
			</activation-config>
		</message-driven>
	</jboss:enterprise-beans>
	<assembly-descriptor>
		<mdb:resource-adapter-binding>
			<ejb-name>UniversalMessagingListener</ejb-name>
			<mdb:resource-adapter-name>#umra.rar</mdb:resource-adapter-name>
		</mdb:resource-adapter-binding>
	</assembly-descriptor>
</jboss:ejb-jar>
