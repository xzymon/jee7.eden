<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.SimpleLayout" />
	</appender>

	<appender name="AP_ROLLING_FILE" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/opt/jboss-logs/rolling.log"/>
		<param name="MaxFileSize" value="100KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%p] %m [category: %c; location: %l]%n"/>
		</layout>
	</appender>

	<root>
		<level value="DEBUG"/>
		<appender-ref ref="STDOUT" />
		<appender-ref ref="AP_ROLLING_FILE" />
	</root>
</log4j:configuration>